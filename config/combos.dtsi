#define COMBO(NAME, BINDINGS, KEYPOS, LAYERS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    layers = <LAYERS>; \
  };

/ {
    combos {
        compatible = "zmk,combos";

        COMBO(combo_z, &kp Z, 0 11, DEF);
        COMBO(combo_q, &kp Q, 26 29, DEF);
    };
};